<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiSocial.MainPage">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Learning about Layouts"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Button
                x:Name="Btn_PostPage"
                Text="Post Page"
                Clicked="Btn_PostPage_Clicked"
                />
            <Button
                x:Name="Btn_ProfilePage"
                Text="Profile Page"
                Clicked="Btn_ProfilePage_Clicked"
                />

            <Button
                x:Name="Btn_CommentPage"
                Text="Mosaic Page"
                Clicked="Btn_CommentPage_Clicked"
                />


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
